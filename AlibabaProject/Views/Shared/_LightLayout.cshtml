<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/NunitoSans.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>

    <div class="body-container-Light">
        <div class="panel panel-default box">
            <div class="panel-heading box-heading">
                <div class="row">
                    <div class="col-md-4 col-6">
                        <p><b>Where In The Word?</b></p>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4 col-6">
                      <a class="switchMode" href="@Url.Action("DarkHomePage","Countries")"><span class="float-right"> <i class="fa fa-moon-o"></i>&nbsp;Dark Mode</span></a>  
                    </div>
                </div>

            </div>
            <div class="panel-body box-body">

                @RenderBody()
            </div>
        </div>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
