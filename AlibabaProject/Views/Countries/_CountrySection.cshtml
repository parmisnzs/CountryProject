@model  IEnumerable<AlibabaProject.Models.Country>
@using AlibabaProject.Models

@{
    List<Country> countryList = Model as List<Country>;
    ViewBag.Title = "_CountrySection";
}
@foreach (var item in countryList)
{
    <div class="col-md-3 col-12">
        <div class="countryBox" onclick="location.href='@Url.Action("GetByName","Countries" , new {name = item.Name })'">
            <div class="ImageBox" onclick="location.href='@Url.Action("GetByName","Countries" , new {name = item.Name })'"><img width="223" height="110" class="img-country"  src="@item.Flag.Svg" /></div>
            <div class="title">@item.Name</div>
            <ul class="infoList">
                <li><span><b class="listBold">Population</b></span> : @item.Population</li>
                <li><span><b class="listBold">Region</b></span>: @item.Region</li>
                <li><span><b class="listBold">Capital</b></span>: @item.Capital</li>
            </ul>
        </div>
    </div>

}

